<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="MAVEN" class="org.grouplens.lenskit.eval.maven.MavenLogAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%date{HH:mm:ss.SSS} %logger{24}: %msg</pattern>
    </layout>
  </appender>

  <logger name="org.grouplens.grapht" level="WARN"/>

  <root level="DEBUG">
    <appender-ref ref="MAVEN"/>
  </root>
</configuration>
